{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "jmud:item:v1",
  "title": "Item (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "id",
    "name",
    "description"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    }
  }
}
