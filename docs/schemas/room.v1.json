{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "jmud:room:v1",
  "title": "Room (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "id",
    "name",
    "description",
    "item_ids"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "item_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      }
    }
  }
}
