{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "jmud:class:v1",
  "title": "Class (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "id",
    "name",
    "healing"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9._-]+$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "healing": {
      "type": "object",
      "additionalProperties": false,
      "required": ["base_modifier"],
      "properties": {
        "base_modifier": {
          "type": "integer"
        }
      }
    }
  }
}
